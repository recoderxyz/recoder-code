{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node"],
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2022",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": ".",
    "composite": true
  },
  "include": ["index.ts", "src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.*.ts",
    "src/__mocks__",
    "src/mocks",
    "src/test-utils",
    "src/telemetry/**/*.test.*.ts"
  ]
}
